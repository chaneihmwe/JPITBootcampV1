<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="6dp"
    android:padding="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <TextView
           android:id="@+id/batch_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintHorizontal_bias="0.1"
           android:text="Batch 1"
           android:textSize="22sp"
           app:layout_constraintBaseline_toBaselineOf="@id/delete_batch"
           />
        <Button
            android:id="@+id/delete_batch"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="@id/batch_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/batch_name"
            app:layout_constraintHorizontal_bias="0.9"
            android:background="@drawable/round_corners_btn"
            android:backgroundTint="@color/colorBlue"
            android:text="X"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

